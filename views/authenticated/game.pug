extends gamesLayout

block content
  a(href="/lobby"): button.btn.btn-secondary(type="button") Back To Lobby
  br

  #Game
    .container
      h1= title
      p Yo Welcome To Scrabble!! #{username}
      #Game-row.row.justify-content-left.align-items-center
        #Game-column.col-md-6
            #Game-box.col-md-12
              for row in gameBoard
                div.row
                  for tile in row
                    if tile == undefined
                      b _
                    else
                      b #{tile.letter}
              h1 game board goes here
  #gametray
    .container
      #gametray.row
          for tilepiece in playerHand
            div.gap#tilepieces
              div #{tilepiece.letter}

